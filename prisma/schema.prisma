generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
    seed     = "ts-node --transpile-only prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  name            String
  email           String   @unique
  password        String?
  googleId        String? @unique
  profile_picture  String?  // optional field
  roles           Role[]   @relation("UserRoles")
  permissions     Permission[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  reports         Archives[] @relation("CreateReport")

  createdRoles    Role[] @relation("CreatedRoles")

  @@map("users") // This is optional, but if you want to map it to 'users', you can use this

}

model Role {
  id           Int          @id @default(autoincrement())
  name         String       @unique
  permissions  Permission[] @relation("RolePermissions")
  users        User[]       @relation("UserRoles")
  createdBy   Int
  created_at   DateTime     @default(now())

  createdByUser User @relation("CreatedRoles", fields: [createdBy], references: [id])


  @@map("roles")
}

model Permission {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  group_name String
  label String
  roles Role[]  @relation("RolePermissions")
  createdAt DateTime @default(now())

  created_by Int?
  user  User? @relation(fields: [created_by], references: [id])

  @@index([created_by])
  @@map("permissions")
}

model Archives {
  id        Int      @id @default(autoincrement())
  memo     String
  title      String
  register_number String
  date_exported_or_received      DateTime
  note      String
  file_number      Int
  archive_category  String
  type      ArchiveType @default(in)
  created_at     DateTime @default(now())
  createdBy Int
  createdByUser User @relation("CreateReport", fields: [createdBy], references: [id])

 @@index([createdBy, title, register_number, date_exported_or_received])
 @@map("archives")

}

enum ArchiveType {
  in
  out
}